package phones;

public class SamsungS4 extends Phone {

    public SamsungS4() {
        screenSize = 5;
        hasWifi = true;
    }
    @Override
    public void sendSMS(String number, String message) {
        System.out.println("Hello" + number + message);
    }
    public static void main(String[] args) {
        SamsungS4 s1 = new SamsungS4();
        System.out.println("Screen size is " + s1.getScreenSize());
        boolean wifi;
        if(wifi = true) {
            System.out.println("Phone has wifi access");
        }
        s1.sendSMS(" 0959215201,", " have a nice day!");
    }
}
